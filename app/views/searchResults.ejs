<!doctype html>

<html>
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>Toy Car Trade</title>
		<link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
  	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
	</head>
	<style>
		.text-black{
			color: #000
		}
		.text-navbar{
			font-size: 20px;
			margin-left: 20px;
			margin-right: 20px;
		}
		.text-body{
			margin: auto;
			margin-top:150px;
		}
		.cart-image{
			width: 50px;
			height:50px;
		}

		.bg-soft-blue{
			background-color: #ABD7EB;
		}
		.search-item{
			margin: 30px;
		}
		.search-item-title{
			display:block;
			width:100%;
			text-align: center;
			font-weight: bold;
			font-size:1.5em;
			color:#333;
			margin-bottom:15px;
		}
		.search-item-image{
			height:150px;
		}
		.search-item-details{
			display:flex;
			align-items: center;
			padding: 5px;
		}
		.search-item-price{
			flex-grow:1;
			color: #333;
		}
		.search-items{
			display:flex;
			flex-wrap:wrap;
			justify-content: space-around;
		}

	</style>
	<body>

		<!--This is the top banner--->
    <nav class="navbar navbar-expand-lg fixed-top bg-primary">
      <div class='container-fluid'>
        <div class="navbar-header">
          <a href="/" class="navbar-brand">
            <img src="/img/ToyCarTradeLogo.png" alt="TOY CAR TRADE">
          </a>
        </div>
				<ul class="navbar-nav w-80">
			    <li class="nav-item">
			      <a class="nav-link text-black text-navbar" href="/searchResults">SEARCH</a>
			    </li>
			    <li class="nav-item">
			      <a class="nav-link text-black text-navbar" href="/postcar">POST CAR</a>
			    </li>
			    <li class="nav-item">
			      <a class="nav-link text-black text-navbar" href="#">AUCTIONS</a>
			    </li>
					<li class="nav-item">
			      <a class="nav-link text-black text-navbar" href="/account">VIEW ACCOUNT</a>
			    </li>
					<li class="nav-item">
			      <a class="nav-link text-black text-navbar" href="/account">SHOPPING CART</a>
			    </li>
			  </ul>
				<div class="navbar-header">
          <a href="/account" class="navbar-brand">
            <img class="cart-image" src="/img/cart.png" alt="Shopping Cart">
          </a>
        </div>
      </div>
    </nav>

		<div class="container text-body bg-soft-blue">
			<h2>Search Results</h2>
			<% if (car != ''){%>
				<%car.forEach(function(car, index) {%>
			<a href="/viewPost/<%- car._id%>" >
			<div class="search-items">
				<!-- this is the inside of the results container -->
				<!-- this is a sample car -->
				<div class="search-item">
					<span class="search-item-title"><%- car.carName%></span>
					<img class="search-item-image" src="/img/slide1.jpg">
					<div class="search-item-details">
						<span class="search-item-price">$<%- car.carPrice%></span>
						<button class="btn btn-primary search-item-btn"> VIEW CAR </button>
					</div>
				</div>
			</div>
		</a>
		<%})%>
		<%}%>
		</div>

		<script src="bootstrap/js/bootstrap.min.js"></script>

	</body>
</html>
